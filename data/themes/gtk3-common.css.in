#breadcrumb-bar {
	padding: 0;
}

.breadcrumbs .button {
	padding-left: 12@GTK_PX@;
	padding-right: 12@GTK_PX@;
}

.breadcrumbs .button {
	border-image: none;
	border-color: @borders;
	border-width: 0 1@GTK_PX@ 1@GTK_PX@ 0;
	border-radius: 0;
}

.breadcrumbs .button:first-child {
}

.breadcrumbs .button:last-child {
}

.breadcrumbs .button:only-child {
}

/* Give the notebook a border at the top and bottom ...
 */

GtkNotebook {
	border-style: solid;
	border-width: 0;
}

/* Emphasise the active navbar button ...
 */

#navbar .button {
	font-weight: normal;
}

#navbar .button:active {
	font-weight: bold;
}
