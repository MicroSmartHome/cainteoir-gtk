@define-color borders #a7aba7;

#toc row,
.label {
	color: alpha(@fg_color, 0.7);
}

#toc row:selected,
#toc row:selected:focused {
	background-image: none;
	border-width: 0;
	color: @selected_bg_color;
	font-weight: bold;
}

GtkToolbar {
	padding-left: 5@GTK_PX@;
	padding-right: 5@GTK_PX@;
}

/* The toc pane is coloured white by default, with the notebook
 * background grey, so make these both white ...
 */

GtkNotebook, #toc, GtkScrolledWindow * {
	background-color: white;
}

/* Make the top bar buttons fit in with the darker top bar.
 */

#topbar .button {
	background-image: -gtk-gradient (linear, left top, left bottom,
		from (shade (@dark_bg_color, 1.3)),
		to (shade (@dark_bg_color, 0.9)));

	color: @dark_fg_color;
	text-shadow: 0 -1 shade (@dark_bg_color, 0.7);

	-unico-border-gradient: -gtk-gradient (linear, left top, left bottom,
		from (shade (@dark_bg_color, 0.9)),
		to (shade (@dark_bg_color, 1.3)));

	-unico-inner-stroke-gradient: -gtk-gradient (linear, left top, left bottom,
		from (shade (@dark_bg_color, 1.4)),
		to (shade (@dark_bg_color, 0.6)));

	-unico-glow-radius: 0;
	-unico-inner-stroke-width: 1@GTK_PX@;
	-unico-outer-stroke-width: 0;
}

#topbar .linked .button:active {
	-unico-inner-stroke-gradient: -gtk-gradient (linear, left top, left bottom,
		from (shade (@dark_bg_color, 1.1)),
		to (shade (@dark_bg_color, 0.6)));

	-unico-glow-color: black;
	-unico-glow-radius: 3;
}

/* Make the buttons in the navbar appear to be part of one single
 * button, with rounded corners at the ends.
 */

#breadcrumb-bar {
	background-color: #f4f4f4;
	border-style: solid;
	border-color: @borders;
	border-width: 0 0 1@GTK_PX@ 0;
	padding: 0;
}

.linked .button,
.breadcrumbs .button {
	-unico-inner-stroke-width: 0;
	-unico-outer-stroke-width: 0;
	border-right-width: 1@GTK_PX@;
	border-left-width: 0;
	border-radius: 0;
}

.linked .button:first-child {
	border-left-width: 1@GTK_PX@;
	border-bottom-left-radius: 3@GTK_PX@;
	border-top-left-radius: 3@GTK_PX@;
}

.linked .button:last-child {
	border-right-width: 1@GTK_PX@;
	border-bottom-right-radius: 3@GTK_PX@;
	border-top-right-radius: 3@GTK_PX@;
}

.linked .button:only-child {
	border-right-width: 1@GTK_PX@;
	border-left-width: 1@GTK_PX@;
	border-radius: 3@GTK_PX@;
}

/* Workaround for Ubuntu bug 888901 ...
 */

.progressbar,
.progressbar row,
.trough,
.trough row {
	-unico-inner-stroke-gradient: none;
	-unico-inner-stroke-width: 0;

	-unico-outer-stroke-gradient: none;
	-unico-outer-stroke-width: 0;
}
